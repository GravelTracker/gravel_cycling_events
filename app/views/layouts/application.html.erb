<!DOCTYPE html>
<html>
  <head>
    <title>GravelTracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('gravel.ico') %>
  </head>

  <body>
    <%= render 'partials/navbar' %>
    <% if notice.present? %>
      <p class="notice text-center bg-info text-white my-0"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert text-center bg-warning my-0"><%= alert %></p> 
    <% end%>
    <%= yield %>
  </body>
</html>
